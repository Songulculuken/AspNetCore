@model AspNetCore.Models.Customer
<html xlmns="http://www.w3.org/1999/xhtml">
<head>
    <title>Update Customer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h3> Update - Customer</h3>
        <form action="/Home/UpdateCustomer" method="post">
            <input type="hidden" name="id" value="@Model.Id" /> @*gizli değer tutma kullanıcılar göremez*@
            <div class="form-group">
                <label> First Name :</label>
                <input type="text" name="firstName" class="form-control" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label> Last Name :</label>
                <input type="text" name="lastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <label> Age :</label>
                <input type="text" name="age" class="form-control" value="@Model.Age" />
            </div>
            <div class="form-group text-right">
               <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
