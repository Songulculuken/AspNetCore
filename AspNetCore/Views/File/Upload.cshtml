@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{
    if (TempData["message"] != null)
    {
        <div class="bg-primary text-white text-center lead">
            @TempData["message"]
        </div>
    }
}
<form asp-action="Upload" method="post" enctype="multipart/form-data">
    @*form aracılığıyla bir data dosya taşıyorsak attribute değiştirmemiz lazım enctype, yoksa binding etmez *@
    <div class="form-group">
        <label for="formFile">Dosya:</label>
        <input id="formFile" type="file" name="formFile" class="form-control" />
    </div>
    <br />
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>